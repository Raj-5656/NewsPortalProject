@model NewsPortalProject.Models.NewsSource
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<div style="text-align: center;">
    <div class="card p-4" style="display: inline-block; margin-top: 50px; background-color: #f8f9fa; border: none; border-radius: 7px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">

        <div class="card-header bg-primary text-white text-center mb-4" style="border-radius: 7px; height:50px">
            <h3>Source Login</h3>
        </div>

        @using (Html.BeginForm())
        {
            <div id="errorMessage" class="text-danger mb-4"></div>

            <div class="form-group mb-4">
                Corporation Name
                <div>
                    @Html.EditorFor(model => model.CorpationName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group mb-4">
                Corporation Password
                <div>
                    @Html.EditorFor(model => model.CorpationPassword, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group mb-4">
                <div class="col-md-offset-2 col-md-11.5">
                    <input type="submit" value="LogIn" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;" />
                </div>
            </div>
        }
    </div>
</div>




<script>
        var errorMessage = '@ViewBag.ErrorMessage';
        if (errorMessage.length > 0) {
            document.getElementById('errorMessage').innerHTML = errorMessage;
        }
</script>



