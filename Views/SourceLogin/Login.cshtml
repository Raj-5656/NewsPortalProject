@model NewsPortalProject.Models.NewsSource
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    html, body {
        background-color: black;
        margin: 0;
        padding: 0;
        height: 130vh;
    }
</style>
<div style="text-align: center;">
    <div class="card p-5" style="display: inline-block; margin-top: 50px; background: linear-gradient(to right, rgba(252, 42, 0, 0.8), rgba(85, 85, 85,0.8)); border: none; border-radius: 20px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3); width: 400px;">
        <div class="card-header bg-transparent text-white text-center mb-4" style="border-radius: 20px 20px 0 0;">
            <h3 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Source Login</h3>
            <br />
        </div>
        @using (Html.BeginForm())
        {
            <div id="errorMessage" class="text-danger mb-4"></div>
            <div class="form-group mb-4 text-white">
                Corporation Name
                <div>
                    <br />
                    @Html.EditorFor(model => model.CorpationName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Email", style = "border-radius: 15px; margin-left:13px;" } })
                </div>
            </div>
            <div class="form-group mb-4 text-white">
                Corporation Password
                <div>
                    <br />
                    @Html.EditorFor(model => model.CorpationPassword, new { htmlAttributes = new { @type = "password", @class = "form-control", placeholder = "Enter Your Password", style = "border-radius: 15px;margin-left:13px;" } })
                </div>
            </div>
            <div class="form-group mb-4">
                <div class="col-md-offset-2 col-md-11.5">
                    <input type="submit" value="LogIn" class="btn btn-primary" style="background: linear-gradient(135deg, #FA421B, #555555); border-radius: 15px; border: none;" />
                </div>
            </div>
        }
    </div>
</div>

<script>
    var errorMessage = '@ViewBag.ErrorMessage';
    if (errorMessage.length > 0) {
        document.getElementById('errorMessage').innerHTML = errorMessage;
    }
</script>
