@model List<NewsPortalProject.Models.NewsCast>

@{
    ViewBag.Title = "SearchNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:black; margin-left:10px;">Search Results</h2>

@if (Model.Count == 0)
{
    <p>Not Found.</p>
}
else
{
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-6">
                    <div class="card" style="width:100%;margin-top:15px;">
                        <img src="~/Images/NewsImages/@item.MultimediaUrl" class="card-img-top" alt="MultimediaUrl">
                        <div class="card-body">
                            <h4 class="card-title" style="color:black">@item.Title</h4>
                            <p class="card-text" style="color:black">@item.Text.ToString().Substring(0, 200) ....</p>
                            <form method="post" action="/NewsCasts/MainNewsAllDetail">
                                <input type="hidden" name="NewsCastId" value="@item.NewsCastId" />
                                <button class="btn" type="submit" style="background-color:mediumpurple; color:white;">Go Details,Comments and Shares</button>
                            </form>
                            <br />




                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

}
