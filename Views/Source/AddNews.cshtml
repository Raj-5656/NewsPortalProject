@model List<NewsPortalProject.Models.NewsCategory>
@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/_Source.cshtml";
}

<style>
    /* Navbar Styling */
    body {
        background-color: black;
    }
    .navbar {
        background-color: #007bff;
    }

    .navbar-brand {
        color: #fff !important;
        font-weight: bold;
    }

    .navbar-nav .nav-link {
        color: #fff !important;
        font-weight: 500;
        transition: color 0.3s;
    }

        .navbar-nav .nav-link:hover {
            color: #f8f9fa !important;
        }

    /* Card Styling */
    .card {
        border: 1px solid white;
        transition: transform 0.2s;
        border-radius: 15px;
        width: 450px;
        background: linear-gradient(to right,#fc2a0096, #555555);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-header {
        
        color: white;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    label {
        font-weight: bold;
    }

    .form-group {
        
        margin-bottom: 25px;
    }

    /* Button Styling */
    .btn-primary {
        background: linear-gradient(135deg, #FA421B, #555555);
        border-radius: 15px;
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #f9462a, #4a4a4a);
        }
        
</style>

<div class="container-fluid" style="height: 100vh; background-color: black; display: flex; align-items: center; justify-content: center;">
    <div class="card shadow">
        <div class="card-header text-center">
            <h4 class="card-title mb-0">Add News</h4>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group text-white">
                    <label for="Title" style="margin-left: 5px;">News Title</label>
                    <input class="form-control" type="text" name="Title" id="Title" style="border-radius: 15px; margin-top: 10px;" />
                </div>

                <div class="form-group text-white">
                    <label for="Text" style="margin-left:5px;">News Text</label>
                    <textarea class="form-control" id="Text" name="Text" rows="4" style="border-radius: 15px; margin-top: 10px;"></textarea>
                </div>

                <div class="form-group text-white">
                    <label for="NewsCategoryId" style="margin-left:5px;">News Category</label>
                    <select class="form-control" name="NewsCategoryId" id="NewsCategoryId" style="border-radius: 15px; margin-top: 10px;">
                        @foreach (var item in Model)
                        {
                            <option value="@item.NewsCategoryId">@item.Category</option>
                        }
                    </select>
                </div>

                <div class="form-group text-white">
                    <label for="Image" style="margin-left:5px;">News Image</label>
                    <input class="form-control-file" type="file" name="Image" id="Image" style="border-radius: 15px; margin-top: 10px;" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">Add News</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
