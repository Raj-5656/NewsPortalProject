<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        /* Global Styling */
        body {
            background-color: #121212;
            color: #ffffff;
            margin: 0; /* Removed margin */
            padding: 0; /* Removed padding */
        }

        /* Navbar Styling */
        .navbar {
            background-color: #ffffff;
            display: flex;
            align-items: center;
            padding: 5px 20px;
            margin: 0; /* Removed margin */
        }

        .navbar-nav {
            display: flex;
            align-items: center;
            margin: 0; /* Removed margin */
        }

        .navbar-nav .nav-item:not(:last-child) {
            margin-right: 20px;
        }

        .navbar-nav .nav-link {
            color: #000000 !important;
            font-weight: 500;
            transition: color 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: #555555 !important;
        }

        .navbar-brand {
            color: #000000;
        }

        .btn-outline-success {
            color: #ffffff;
            border: 1px solid #ffffff;
        }

        .form-control {
            height: 39px;
            background-color: #ffffff;
            color: #000000;
        }

        /* Card Styling */
        .card {
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
            color: #000000;
        }

        /* Footer Styling */
        footer {
            background-color: #ffffff;
            color: #000000;
            text-align: center;
            padding: 10px 0;
            border-radius: 0 0 10px 10px;
            margin: 0; /* Removed margin */
        }

        /* Font Color */
        h1, h2, h3, h4, h5, h6 {
            color: #ffffff;
        }

        p, li, a {
            color: #CCCCCC;
        }

    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" style="padding:10px" href="~/NewsCasts/MainNewsAll">NewsPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsFavs/UserFavDetail">My Favorite News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsSubscribers/UserAddSubs">My Subscriber News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/NewsShares/GetShareTable">My Shared News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Users/UsersDetail">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Login/LogOut">LogOut</a>
                        </li>
                        <li class="notification nav-item">
                            @Html.Action("SharredNotifation", "NewsShares")
                        </li>
                    </ul>
                    <div style="float:right">
                        <form class="input-group" method="post" action="/NewsCasts/SearchNews">
                            <input id="search" name="query" class="form-control" type="text" placeholder="Search" aria-label="Search">
                            <button id="search-News" class="btn btn-outline-success" type="submit">Search News</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

    </div>

    <!-- Your existing content -->
    <div class="container-fluid body-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
                    @Html.Action("PartialGetAllCategories", "NewsCategories")
                </div>
                <div class="col-10">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - NewsPortal Application for Sarvajanik College</p>
        </footer>

    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Content/js.js")
</body>
</html>
