<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        /* Global Styling */
        body {
            background-color: rgb(237, 234, 234) !important;
            color: black;
            margin: 0;
            padding: 0;
            position: relative;
            min-height: 100vh;
        }

        /* Navbar Styling */
        .navbar {
            display: flex;
            align-items: center;
            padding:0;
            margin: 0;
            background-color: white; /* Make the background transparent */
            backdrop-filter: blur(10px); /* Apply a blur effect */
            -webkit-backdrop-filter: blur(10px); /* For Safari */
            border: none; /* Remove border */
            
            /*border: 1px solid white;  Remove border */
        }

        .navbar-nav {
            background-color: transparent; /* Transparent background */
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            color: black;
            list-style: none; /* Remove list bullets */
            margin-left: auto; /* Pushes items to the right */
            
        }

            .navbar-nav .nav-item:not(:last-child) {
                margin-right: 20px;
            }

            .navbar-nav .nav-link {
                color: black !important;
                font-weight: 500;
                 /* Added padding to the nav links */
            }

                /* Remove hover effect 
                .navbar-nav .nav-link:hover {
                    color: #ffffff !important;  Keep the color the same as non-hover 
                }*/
                .navbar-nav .nav-link:hover {
                    color: white !important;
                    background-color: mediumpurple !important;
                }
                    .navbar-nav .nav-link:hover svg {
                        fill: white;
                    }

        .navbar-brand {
            color: mediumpurple !important;
            font-weight:500;
            font-size:x-large;
            text-decoration: none; /* Remove underline */
        }
        .navbar-brand:hover{
            color:mediumpurple;
        }
            

        .btn-outline-success {
            color: #ffffff;
            border: 1px solid #ffffff;
        }

        .form-control {
            height: 39px;
            background-color: #ffffff;
            color: #000000;
        }

        /* Card Styling */
        .card {
            background-color:white;
            
            color: #000000;
        }

        /* Footer Styling */
        footer {
            background-color: white; /* Transparent background */
            color: black;
            text-align: center;
            padding: 10px 0;
            
            position: absolute;
            bottom: 0;
            width: 100%;
            padding-left: 0 !important;
            padding-right: 0 !important;
            border:none; /* Remove border */
        }

        /* Font Color */
        h1, h2, h3, h4, h5, h6 {
            color: #ffffff;
        }

        p, li, a {
            color: #CCCCCC;
        }

        /* Container for main content */
        .body-content {
            padding-left:0;
        }

        #search {
            width: 100px;
            margin-left: 10px;
            margin-top: 10px;
        }

        #search-News {
            margin-top: 10px;
        }

        .notification {
            margin-top: 7px;
        }
        .col-2 {
            margin-top: 16px; /* Adjust the margin to remove the gap */
        }
        .col-2 {
            padding-left: 0; /* Remove left padding */
        }
        .footer-container {
            padding-bottom: 0px; /* Add padding at the bottom */
        }
        form:hover svg{
            fill:white;
        }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" style="padding:10px" href="~/NewsCasts/MainNewsAll">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="mediumpurple" class="bi bi-newspaper" viewBox="0 0 16 16">
                        <path d="M0 2.5A1.5 1.5 0 0 1 1.5 1h11A1.5 1.5 0 0 1 14 2.5v10.528c0 .3-.05.654-.238.972h.738a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 1 1 0v9a1.5 1.5 0 0 1-1.5 1.5H1.497A1.497 1.497 0 0 1 0 13.5zM12 14c.37 0 .654-.211.853-.441.092-.106.147-.279.147-.531V2.5a.5.5 0 0 0-.5-.5h-11a.5.5 0 0 0-.5.5v11c0 .278.223.5.497.5z" />
                        <path d="M2 3h10v2H2zm0 3h4v3H2zm0 4h4v1H2zm0 2h4v1H2zm5-6h2v1H7zm3 0h2v1h-2zM7 8h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2z" />
                    </svg> NewsPortal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsFavs/UserFavDetail"><svg style="margin-right:5px; margin-top:-4px;" xmlns="http://www.w3.org/2000/svg" width="18" height="18"  fill="black" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z" />
                            </svg>My Favorite</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsSubscribers/UserAddSubs"><svg style="margin-right:5px;" xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-bookmark-check" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0" />
                            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z" />
                            </svg>Subscribe News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/NewsShares/GetShareTable"><svg  style="margin-right:5px;"xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-share" viewBox="0 0 16 16">
                            <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.5 2.5 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5m-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3m11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3" />
                            </svg>Shared News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Users/UsersDetail"><svg style="margin-right:5px;"xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                            </svg>Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Login/LogOut"><svg style="margin-right: 5px; margin-top: -2px;"xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                            </svg>LogOut</a>
                        </li>
                        <li class="notification nav-item">
                            @Html.Action("SharredNotifation", "NewsShares")
                        </li>
                    </ul>
                    <div>
                        <form class="input-group" method="post" action="/NewsCasts/SearchNews">
                            <input id="search" name="query" class=" form-control" type="text" placeholder="Search" aria-label="Search">
                            <button id="search-News" class="btn btn-outline-success" style="color:black; border:1px solid lightgray;" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg></button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!-- Your existing content -->
    <div class="container-fluid body-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
                    @Html.Action("PartialGetAllCategories", "NewsCategories")
                </div>
                <div class="col-10">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer class="footer-container">
        <p style="color:black;">COPYRIGHT &copy; @DateTime.Now.Year - NewsPortal, All rights Reserved</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Content/js.js")
</body>
</html>
