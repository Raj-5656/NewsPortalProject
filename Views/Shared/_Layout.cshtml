<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        /* Navbar Styling */
        .navbar {
            background-color: #007bff; /* Blue background color */
            display: flex;
            align-items: center; /* Vertically center the items */
        }

        .navbar-nav {
            display: flex;
            align-items: center; /* Vertically center the items */
        }

            .navbar-nav .nav-item:not(:last-child) {
                margin-right: 20px; /* Equal spacing between li items */
            }

            .navbar-nav .nav-link {
                color: #ffffff !important; /* White color for the nav links */
                font-weight: 500;
                transition: color 0.3s;
            }

                .navbar-nav .nav-link:hover {
                    color: #f8f9fa !important; /* Lighter color on hover */
                }

        .navbar-brand {
            color: white;
        }

        .btn-outline-success {
            color: white;
            border: 1px solid white;
        }

        .form-control {
            height: 39px;
        }

        #search {
            margin-top: 10px;
        }

        #search-News {
            margin-top: 10px;
        }

        /* Notification Style */
        .notification .nav-link {
            color: white !important; /* White color for the notification */
            border: none; /* Remove border */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Footer Styling */
        footer {
            background-color: #007bff; /* Blue background color */
            color: white; /* White text color */
            text-align: center; /* Center-align text */
            padding: 10px 0; /* Padding top and bottom */
            border-radius: 0 0 10px 10px; /* Rounded corners only at the bottom */
            padding-top: 25px;
        }

    </style>
</head>
<body>
    <div style="margin-left:10px;margin-right:10px;margin-top:10px; border:solid 1px black;">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" style="padding:10px" href="~/NewsCasts/MainNewsAll">NewsPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsFavs/UserFavDetail">My Favorite News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsSubscribers/UserAddSubs">My Subscriber News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/NewsShares/GetShareTable">My Shared News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Users/UsersDetail">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Login/LogOut">LogOut</a>
                        </li>
                        <li class="notification nav-item">
                            @Html.Action("SharredNotifation", "NewsShares")
                        </li>

                    </ul>
                    <div style="float:right">
                        <form class="input-group" method="post" action="/NewsCasts/SearchNews">
                            <input id="search" name="query" class="form-control" type="text" placeholder="Search" aria-label="Search">
                            <button id="search-News" class="btn btn-outline-success" type="submit">Search News</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!-- Your existing content -->
    <div class="container-fluid body-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
                    @Html.Action("PartialGetAllCategories", "NewsCategories")
                </div>
                <div class="col-10">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - NewsPortal Application for Sarvajanik College</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Content/js.js")
</body>
</html>
