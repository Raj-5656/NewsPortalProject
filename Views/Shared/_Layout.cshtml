<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        /* Global Styling */
        body {
            background-color: black;
            color: #ffffff;
            margin: 0;
            padding: 0;
            position: relative;
            min-height: 100vh;
        }

        /* Navbar Styling */
        .navbar {
            background-color: black; /* Transparent background */
            display: flex;
            align-items: center;
            padding: 5px 10px;
            margin: 0;
            border:1px solid  white; /* Remove border */
        }

        .navbar-nav {
            display: flex;
            align-items: center;
            list-style: none; /* Remove list bullets */
            margin-left: auto; /* Pushes items to the right */
        }

            .navbar-nav .nav-item:not(:last-child) {
                margin-right: 20px;
            }

            .navbar-nav .nav-link {
                color: #ffffff !important;
                font-weight: 500;
                padding: 10px; /* Added padding to the nav links */
            }

                /* Remove hover effect */
                .navbar-nav .nav-link:hover {
                    color: #ffffff !important; /* Keep the color the same as non-hover */
                }

        .navbar-brand {
            color: #ffffff;
            text-decoration: none; /* Remove underline */
        }

            /* Remove hover effect from navbar-brand */
            .navbar-brand:hover {
                color: #ffffff;
            }

        .btn-outline-success {
            color: #ffffff;
            border: 1px solid #ffffff;
        }

        .form-control {
            height: 39px;
            background-color: #ffffff;
            color: #000000;
        }

        /* Card Styling */
        .card {
            background-color: black;
            border: 1px solid White;
            color: #000000;
        }

        /* Footer Styling */
        footer {
            background-color: black; /* Transparent background */
            color: #000000;
            text-align: center;
            padding: 10px 0;
            
            position: absolute;
            bottom: 0;
            width: 100%;
            padding-left: 0 !important;
            padding-right: 0 !important;
            border:1px solid white; /* Remove border */
        }

        /* Font Color */
        h1, h2, h3, h4, h5, h6 {
            color: #ffffff;
        }

        p, li, a {
            color: #CCCCCC;
        }

        /* Container for main content */
        .body-content {
            padding-top: 20px;
            padding-bottom: 60px;
        }

        #search {
            width: 100px;
            margin-left: 10px;
            margin-top: 10px;
        }

        #search-News {
            margin-top: 10px;
        }

        .notification {
            margin-top: 7px;
        }
        
        
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" style="padding:10px" href="~/NewsCasts/MainNewsAll">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-newspaper" viewBox="0 0 16 16">
                        <path d="M0 2.5A1.5 1.5 0 0 1 1.5 1h11A1.5 1.5 0 0 1 14 2.5v10.528c0 .3-.05.654-.238.972h.738a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 1 1 0v9a1.5 1.5 0 0 1-1.5 1.5H1.497A1.497 1.497 0 0 1 0 13.5zM12 14c.37 0 .654-.211.853-.441.092-.106.147-.279.147-.531V2.5a.5.5 0 0 0-.5-.5h-11a.5.5 0 0 0-.5.5v11c0 .278.223.5.497.5z" />
                        <path d="M2 3h10v2H2zm0 3h4v3H2zm0 4h4v1H2zm0 2h4v1H2zm5-6h2v1H7zm3 0h2v1h-2zM7 8h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2z" />
                    </svg> NewsPortal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsFavs/UserFavDetail">My Favorite News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsSubscribers/UserAddSubs">My Subscriber News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/NewsShares/GetShareTable">My Shared News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Users/UsersDetail">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Login/LogOut">LogOut</a>
                        </li>
                        <li class="notification nav-item">
                            @Html.Action("SharredNotifation", "NewsShares")
                        </li>
                    </ul>
                    <div>
                        <form class="input-group" method="post" action="/NewsCasts/SearchNews">
                            <input id="search" name="query" class=" form-control" type="text" placeholder="Search" aria-label="Search">
                            <button id="search-News" class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!-- Your existing content -->
    <div class="container-fluid body-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
                    @Html.Action("PartialGetAllCategories", "NewsCategories")
                </div>
                <div class="col-10">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - NewsPortal Application for Sarvajanik College</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Content/js.js")
</body>
</html>
