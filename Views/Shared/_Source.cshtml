<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: rgb(237, 234, 234);
        }

        nav.navbar {
            background-color: white;
            border: 1px solid white; /* White border */
            color: black;
        }

        .nav-link {
            transition: color 0.5s ease, background-color 0.5s ease; /* Smooth transition */
        }

            .nav-link:hover {
                background-color: mediumpurple;
                color: white;
            }

        .navbar-brand {
            margin-left: 10px;
        }

            .navbar-brand a {
                color: mediumpurple !important;
                text-decoration: none;
                font-size: x-large;
            }

        .navbar-nav {
            margin-left: 65%; /* Align nav items to the right */
        }

            .navbar-nav .nav-item .nav-link {
                color: white; /* Nav item text color */
            }

                .navbar-nav .nav-item .nav-link.add-link,
                .navbar-nav .nav-item .nav-link.logout-link {
                    color: black !important; /* Add link text color */
                }

        footer {
            background-color: white;
            color: black;
            text-align: center;
            padding: 10px 0;
            border: 1px solid white;
            padding-top: 23px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" style="margin-left:20px;" fill="mediumpurple" class="bi bi-newspaper" viewBox="0 0 16 16">
                <path d="M0 2.5A1.5 1.5 0 0 1 1.5 1h11A1.5 1.5 0 0 1 14 2.5v10.528c0 .3-.05.654-.238.972h.738a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 1 1 0v9a1.5 1.5 0 0 1-1.5 1.5H1.497A1.497 1.497 0 0 1 0 13.5zM12 14c.37 0 .654-.211.853-.441.092-.106.147-.279.147-.531V2.5a.5.5 0 0 0-.5-.5h-11a.5.5 0 0 0-.5.5v11c0 .278.223.5.497.5z" />
                <path d="M2 3h10v2H2zm0 3h4v3H2zm0 4h4v1H2zm0 2h4v1H2zm5-6h2v1H7zm3 0h2v1h-2zM7 8h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2z" />
            </svg><span class="navbar-brand"><a href="~/Source/SourceNews" style="color: mediumpurple !important;">NewsPortal</a></span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item" style="color:black;">
                        <a class="nav-link active add-link" aria-current="page" href="~/Source/AddNews"><i class="bi bi-file-plus" style="margin-right:5px;"></i>Add News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active add-link" aria-current="page" href="~/NewsCategories/Create"> <i class="bi bi-bookmark-check" style="margin-right:5px;"></i>Add CategoryNews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active add-link" href="~/SourceLogin/LogOut"><i class="bi bi-box-arrow-right" style="margin-right:5px;"></i>LogOut</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year  NewsPortal Application for Sarvajanik College</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
