@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div style="text-align: center;">
    <div class="card p-4" style="display: inline-block; margin-top: 50px; background-color: #f8f9fa; border: none; border-radius: 7px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); ">
        <div class="card-header bg-primary text-white text-center mb-2" style="border-radius:7px; height:50px">
            <h3>Login</h3>
        </div>
        <form method="post">
            <div id="errorMessage" class="text-danger mb-4"></div>
            <div class="form-group mb-4">
                <label for="Email" class="form-label">Email</label><br />
                <input type="email" class="form-control" name="Email" id="Email" placeholder="" required />
            </div>
            <div class="form-group mb-4">
                <label for="Password" class="form-label">Password</label><br />
                <input type="password" class="form-control" name="Password" id="Password" placeholder="" required />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin: 10px;">
                    <input type="submit" value="Login" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;"/>
                </div>
            </div>
        </form>
    </div>
</div>






<script>
        var errorMessage = '@ViewBag.ErrorMessage';
        if (errorMessage.length > 0) {
            document.getElementById('errorMessage').innerHTML = errorMessage;
        }
</script>
