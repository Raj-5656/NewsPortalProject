@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    html, body {
        background-color: white;
        margin: 0;
        padding: 0;
        height: 100vh;
    }
</style>
<div style="text-align: center;">
    <div class="card p-5" style="display: inline-block; margin-top: 50px; background: linear-gradient(to right, rgba(252, 42, 0, 0.8), rgba(85, 85, 85,0.8)); /* Darkred color with 50% opacity */ border: none; border-radius: 20px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3); width: 400px; ">
        <div class="card-header bg-transparent text-white text-center mb-4" style="border-radius: 20px 20px 0 0;">
            <h3 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Login</h3>
            <br />
        </div>
        <form method="post">
            <div id="errorMessage" class="text-danger mb-4"></div>
            <div class="form-group mb-4">
                <label for="Email" class="form-label text-white">User Id</label><br />
                <input type="email" class="form-control" name="Email" id="Email" placeholder="Enter Your Email" required style="border-radius: 15px; margin-left: 15px;" />
            </div>
            <div class="form-group mb-4">
                <label for="Password" class="form-label text-white">Password</label><br />
                <input type="password" class="form-control" name="Password" id="Password" placeholder="Enter Your Password" required style="border-radius: 15px; margin-left: 15px;" />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 d-grid" style="margin: 10px;">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" style="background: linear-gradient(135deg, #FA421B, #555555);margin-left:30px; border-radius: 15px; border: none;" />
                </div>
            </div>
        </form>
    </div>
</div>



<script>
        var errorMessage = '@ViewBag.ErrorMessage';
        if (errorMessage.length > 0) {
            document.getElementById('errorMessage').innerHTML = errorMessage;
        }
</script>
