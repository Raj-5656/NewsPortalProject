@model NewsPortalProject.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for full-screen background image */
        
        video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%; /* Set width to 100% of viewport */
            height: 100%; /* Set height to 100% of viewport */
            object-fit: cover; /* Cover the entire viewport */
            z-index: -1; /* Ensure it's behind other content */
        }

        /* Custom CSS for content */
        .content {
            /* Add additional styling for content if needed */
            color: white; /* Example: Set text color to white */
        }
    </style>
</head>
<body>
    <video autoplay muted loop>
        <source src="~/Video/BREAKING NEWS.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Your content goes here -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <!-- Add your content here -->
                </div>
            </div>
        </div>
    </div>

</body>
</html>
