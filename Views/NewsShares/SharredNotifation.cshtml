<style>
    /* Button styling */
    #liveToastBtn {
        color: white;
        margin-top: 10px;
        border: 1px solid white;
        background-color: black; /* Blue button with gradient */
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        #liveToastBtn:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    /* Toast styling */
    .toast-container .toast {
        color: black;
        background-color: #f8f9fa; /* Light gray background */
        border: 1px solid #e9ecef; /* Light border */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    .toast-header {
        background-color: black; /* Blue header */
        color: white;
        border-radius: 10px 10px 0 0; /* Rounded top corners */
    }

    .btn-close {
        color: white;
    }
    
</style>

<button type="button" class="btn" id="liveToastBtn">
    <b>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-bell" viewBox="0 0 16 16">
            <path stroke="white" d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2M8 1.918l-.797.161A4 4 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4 4 0 0 0-3.203-3.92zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5 5 0 0 1 13 6c0 .88.32 4.2 1.22 6" />
        </svg>
    </b>
</button>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        @foreach (var item in Model)
        {
            var Title = item.GetType().GetProperty("Title").GetValue(item, null);
            var SName = item.GetType().GetProperty("SName").GetValue(item, null);
            var SImage = item.GetType().GetProperty("SImage").GetValue(item, null);
            var Date = item.GetType().GetProperty("Date").GetValue(item, null);
            var NewsCastId = item.GetType().GetProperty("NewsCastId").GetValue(item, null);
            <div class="toast-header">
                <img src="~/Images/UserImages/@SImage" style="width:50px" class="rounded me-2" alt="...">
                <strong class="me-auto">@SName send to News for you.</strong>
                <form method="post" action="/NewsCasts/MainNewsAllDetail">
                    <input type="hidden" name="NewsCastId" value="@NewsCastId" />
                    <button class="btn" type="submit" style="background-color: black; color: white;margin-right:10px;margin-top:20px; border-radius: 5px;">Go Details</button>
                </form>
                <small> Date: @Date</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" style="padding: 10px;">
                @Title
            </div>
        }
    </div>
</div>
