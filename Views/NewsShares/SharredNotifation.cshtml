<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Button styling */
        #liveToastBtn {
            color: white;
            margin-top: 5px;
            background-color: white;
            border: 1px solid lightgray;
            padding: 7px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            #liveToastBtn:hover {
                background-color: mediumpurple; /* Blue button with gradient */
            }

                #liveToastBtn:hover svg {
                    fill: white; /* Blue button with gradient */
                }

        /* Toast container styling */
        .toast-container {
            position:fixed;
            top:450px;
            right: -30px;
            z-index: 1051;
            width: 300px; /* Set a fixed width for the container */
        }

        /* Toast styling */
        .toast {
            color: black;
            background-color: #f8f9fa; /* Light gray background */
            border: 1px solid #e9ecef; /* Light border */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
            max-width: 350px; /* Set maximum width for the toast */
        }

        .toast-header {
            background-color: black; /* Blue header */
            color: white;
            border-radius: 10px 10px 0 0; /* Rounded top corners */
        }

        .btn-close {
            color: black;
        }

        .toast-body {
            padding: 10px;
        }
    </style>
</head>
<body>

    <button type="button" class="btn" id="liveToastBtn">
        <b>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-bell-fill" viewBox="0 0 16 16">
                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
            </svg>
        </b>
    </button>

    <div class="toast-container">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            @foreach (var item in Model)
            {
                var Title = item.GetType().GetProperty("Title").GetValue(item, null);
                var SName = item.GetType().GetProperty("SName").GetValue(item, null);
                var SImage = item.GetType().GetProperty("SImage").GetValue(item, null);
                var Date = item.GetType().GetProperty("Date").GetValue(item, null);
                var NewsCastId = item.GetType().GetProperty("NewsCastId").GetValue(item, null);
                <div class="toast-header">
                    <img src="~/Images/UserImages/@SImage" style="width:50px" class="rounded me-2" alt="...">
                    <strong class="me-auto">@SName send to News for you.</strong>
                    <form method="post" action="/NewsCasts/MainNewsAllDetail">
                        <input type="hidden" name="NewsCastId" value="@NewsCastId" />
                        <button class="btn" type="submit" style="background-color: black; color: white;margin-right:10px;margin-top:20px; border-radius: 5px;">Go Details</button>
                    </form>
                    <small> Date: @Date</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @Title
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Click handler for the notification button
            $('#liveToastBtn').click(function () {
                $('#liveToast').toast('show'); // Show the toast when the button is clicked
            });
        });
    </script>
</body>
</html>
